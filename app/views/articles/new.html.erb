<h1>Create an article</h1>

<% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |message| %>
        <h3><%= message %></h3>
    <% end %>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>